<h1>Ajouter une annonce</h1>
<form method="POST" action="/create-accommodation">
    <!-- Champ pour le prix -->
    <label for="price">Prix :</label>
    <input type="number" id="price" name="price" required>

    <!-- Champ pour la surface -->
    <label for="surface">Surface :</label>
    <input type="number" id="surface" name="surface" required>

    <!-- Champ pour la description -->
    <label for="description">Description :</label>
    <textarea id="description" name="description" required></textarea>

    <!-- Champ pour la capacité -->
    <label for="capacity">Capacité (nombre de couchages) :</label>
    <input type="number" id="capacity" name="capacity" required>

    <!-- Sélection du type de logement -->
    <label for="id_type">Type de logement :</label>
    <select id="id_type" name="id_type" required>
        <option value="1">Logement entier</option>
        <option value="2">Chambre privée</option>
        <option value="3">Chambre partagée</option>
    </select>

    <!-- Sélection de l'adresse -->
    <label for="id_address">Adresse :</label>
    <input type="text" id="id_address" name="id_address" required>

    <button type="submit">Ajouter l'annonce</button>
</form>